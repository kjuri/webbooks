%div.container
  %div.row
    %div.col-sm-6{class: ('offset-sm-3' unless user_signed_in?)}
      %h1.home__header WebBooks
      - if user_signed_in?
        %h2 #{current_user.primary_role_name}'s panel
  - if user_signed_in?
    = render partial: current_user.home_partial unless current_user.admin?
  - else
    = render partial: 'partials/home'
