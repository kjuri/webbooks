.container
  .row
    .col-sm-9
      %h2 Chapters
    .col.sm-3.pull-right
      = link_to 'Create new chapter', new_book_chapter_path(@book), class: 'btn btn-outline-primary'
  .row
    .col-sm-12
      %table.table.table-hover
        %thead.thead-inverse
          %tr
            %th #
            %th
              = Chapter.human_attribute_name :title
            %th
              = Chapter.human_attribute_name :parts_count
            %th
              = Chapter.human_attribute_name :created_at
            %th
              = Chapter.human_attribute_name :actions
        %tbody
          - @chapters.each do |chapter|
            %tr
              %th{ scope: 'row' }
                = chapter.id
              %td
                = link_to chapter.title, [@book, chapter]
              %td.table__cell-centered
                = chapter.parts.size
              %td
                = chapter.created_at
              %td.table__cell-centered.table__actions
                = link_to fa_icon('search'), [@book, chapter], class: 'actions__button'
                = link_to fa_icon('edit'), edit_book_chapter_path(@book, chapter), class: 'actions__button'
                = link_to fa_icon('times'), book_chapter_path(@book, chapter), method: :delete, class: 'actions__button actions__button-aligned'
