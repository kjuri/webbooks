.container
  .row
    .col-sm-9
      %h2 Parts
    .col.sm-3.pull-right
      = link_to 'Create new part', new_book_chapter_part_path(@book, @chapter), class: 'btn btn-outline-primary'
  .row
    .col-sm-12
      %table.table.table-hover
        %thead.thead-inverse
          %tr
            %th #
            %th
              = Part.human_attribute_name :title
            %th
              = Part.human_attribute_name :content
            %th
              = Part.human_attribute_name :created_at
            %th
              = Part.human_attribute_name :actions
        %tbody
          - @chapter.parts.each do |part|
            %tr
              %th{ scope: 'row' }
                = part.id
              %td
                = link_to part.title, [@book, @chapter, part]
              %td.table__cell-centered
                = part.content.html_safe
              %td
                = part.created_at
              %td.table__cell-centered.table__actions
                = link_to fa_icon('search'), [@book, @chapter, part], class: 'actions__button'
                = link_to fa_icon('edit'), edit_book_chapter_part_path(@book, @chapter, part), class: 'actions__button'
                = link_to fa_icon('times'), book_chapter_part_path(@book, @chapter, part), method: :delete, class: 'actions__button actions__button-aligned'
