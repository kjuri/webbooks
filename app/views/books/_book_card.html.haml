.col-sm-3.section
  .card
    = link_to image_tag(book.cover_file, class: 'card-img-top card-image'), details_book_path(book)
    .card-block.text-xs-center
      %h3.card-title.book__title
        = book.title
      %h4.cart-subtitle.text-muted.book__subtitle
        = book.subtitle
      %p.card-text
        = book.short_description
      = book.library_link(current_user) if user_signed_in?
